#Division of the 2 numbers with "error" message if div by 0
def division (a,b):
    if b != 0:
        return (a/b)
    else:
        return ('стремится к бесконечности')
#User name function
def userInfo (name, surname, DOB, city, email, phone):
    print ('Пользователь {} {} родился {} в городе {}. Его емейл: {}, его номер телефона: {}'.format(name, surname, DOB, city, email, phone))

def returnTwoBigger (a,b,c):
    min = a
    if b<min:
        min = b
    elif c<min:
        min =c
    return(a+b+c-min)

#Возведение целого числа в целую отрицательную степень двумя способами
print(division (1,10))
print(division (1,0))
#print ('{:.2f}'.format(division (1,)))
userInfo('Максим','Кузнецов','25.06.1997','Львов','maksym.v.kuznetsov@gmail.com', '+380637290711')
print(returnTwoBigger(1,2,3))

def toThePowerOf_type1 (x,y):
    if y>=0:
        return ('y< - y should be int and < 0')
    return (x**y)
    
def toThePowerOf_type2 (x,y):
    if y>=0:
        return ('y< - y should be int and < 0')
    result = 1
    y = -y
    for i in range(y):
        result = result/x
    return(result)

print(toThePowerOf_type1 (2,-3))
print(toThePowerOf_type2 (2,-3))

#Вводим числа через пробел. Программа выводит их сумму и снова запрашивает числа через пробел - они будут добавлены к уже имеющейся сумме. 
#Чтоб остановится - нужно ввести "s" (так же через пробел
#Реализация через рекурсию
def sumation(sum=0):
    numbers = input('Put numbers over spaces. To stop the programm - type "s"')
    numbers = numbers.split(' ')
    #print(numbers)
    for i in range(len(numbers)):
        if numbers[i] == 's':
            return(sum)
        sum = sum + int(numbers[i])
    return(sumation(sum))
    
print(sumation())
